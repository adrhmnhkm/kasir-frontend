
{
  "version": 2,
  "builds": [
    {
      "src": "frontend-only/public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "frontend-only/frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/receipt/(.*)",
      "dest": "/frontend-only/public/receipt.html"
    },
    {
      "src": "/frontend/(.*)",
      "dest": "/frontend-only/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend-only/public/$1"
    }
  ],
  "buildCommand": "cd frontend-only && npm run build",
  "outputDirectory": "frontend-only/public",
  "installCommand": "cd frontend-only && npm install",
  "env": {
    "NODE_ENV": "production"
  }
}
